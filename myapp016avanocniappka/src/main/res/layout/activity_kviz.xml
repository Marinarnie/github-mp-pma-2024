<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageButton
        android:id="@+id/btnZpet2"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:src="@drawable/baseline_arrow_back_24"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Otázky"
        android:gravity="center"
        android:textSize="65sp"
        android:layout_marginBottom="16dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/questionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1/3 Vánoce jsou:"
        android:gravity="center"
        android:textSize="35sp"
        android:layout_marginBottom="16dp"
        android:textStyle="bold"/>

    <RadioGroup
        android:id="@+id/otazka1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="18dp">

        <RadioButton
            android:id="@+id/prvni_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dobrý důvod proč mít vánoční prázdniny "
            android:textSize="23sp"
            android:layout_margin="15sp"/>

        <RadioButton
            android:id="@+id/prvna_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="vesnička na Bílém potoce v jihovýchodních Čechách "
            android:textSize="23sp"
            android:layout_margin="15sp"/>

        <RadioButton
            android:id="@+id/prvni_c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="svátky připomínající Ježíšovo narození"
            android:textSize="23sp"
            android:layout_margin="15sp"/>

    </RadioGroup>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <Button
        android:id="@+id/btnDalsi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Další"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btnKonec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Konec"
        android:layout_marginTop="8dp" />
</LinearLayout>

    <ImageView
        android:layout_width="600sp"
        android:layout_height="200sp"
        android:layout_gravity="center"
        android:src="@drawable/pngegg_ukazka"
        android:layout_marginTop="150sp"/>

</LinearLayout>
