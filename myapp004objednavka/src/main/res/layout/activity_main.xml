<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jakou mikinu si chceš objednat?"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:textcolor="@color/mycolor1"
        android:layout_marginTop="10sp"
        android:textStyle="bold"
        android:layout_marginLeft="15sp"
        android:textAlignment="center"
        />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="18dp"
        android:layout_gravity="center">

        <RadioButton
            android:id="@+id/mikbav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bavlňěná"
            android:textSize="23sp" />

        <RadioButton
            android:id="@+id/mikfle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fleecová"
            android:textSize="23sp"/>

        <RadioButton
            android:id="@+id/mikfun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Funkční"
            android:textSize="23sp"/>

    </RadioGroup>

    <CheckBox
        android:id="@+id/velxs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:text="XS/S"
        android:textSize="20sp">
    </CheckBox>

    <CheckBox
        android:id="@+id/velml"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="M/L"
        android:textSize="20sp">
    </CheckBox>

    <CheckBox
        android:id="@+id/velxl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XL/2XL"
        android:textSize="20sp">
    </CheckBox>

    <Button
        android:id="@+id/btnobjed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140sp"
        android:text="Objednat"
        android:textSize="20sp">
    </Button>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Souhrn objednávky"
        android:textSize="18sp">

    </TextView>

    <ImageView
        android:id="@+id/obr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </ImageView>

</LinearLayout>

