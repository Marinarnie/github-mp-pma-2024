<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddEvent">

    <Button
        android:id="@+id/btnZpet"
        android:layout_width="90sp"
        android:layout_height="40sp"
        android:hint="Zpět"
        android:textColorHint="@color/white"
        android:textSize="18sp"></Button>

    <TextView
        android:layout_width="410sp"
        android:layout_height="70sp"
        android:gravity="center"
        android:hint="Přidání události"
        android:textColorHint="@color/purple"
        android:textSize="35sp"></TextView>

    <LinearLayout
        android:layout_width="410sp"
        android:layout_height="50sp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="140sp"
            android:layout_height="60sp"
            android:layout="@+id/viewNazev"
            android:hint="Název: "
            android:textSize="30sp"></TextView>

        <EditText
            android:id="@+id/editUdalost"
            android:layout_width="270sp"
            android:layout_height="60sp"
            android:hint="událost"
            android:textColorHint="@color/purple"
            android:textSize="25sp"></EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="410sp"
        android:layout_height="60sp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="140sp"
            android:layout_height="60sp"
            android:hint="Datum: "
            android:textSize="30sp"></TextView>

        <EditText
            android:id="@+id/editDatum"
            android:layout_width="270sp"
            android:layout_height="60sp"
            android:focusable="false"
            android:hint="vybrat datum"
            android:textColorHint="@color/purple"
            android:textSize="25sp"></EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="410sp"
        android:layout_height="60sp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="140sp"
            android:layout_height="60sp"
            android:hint="Kategorie: "
            android:textSize="30sp"></TextView>

        <EditText
            android:id="@+id/editKategorie"
            android:layout_width="270sp"
            android:layout_height="60sp"
            android:focusable="false"
            android:hint="vybrat kategorii"
            android:textColorHint="@color/purple"
            android:textSize="25sp"></EditText>

    </LinearLayout>

</LinearLayout>