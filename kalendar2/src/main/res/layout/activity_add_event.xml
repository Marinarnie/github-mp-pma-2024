<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddEvent">

    <Button
        android:id="@+id/btnZpet"
        android:layout_width="90sp"
        android:layout_height="40sp"
        android:hint="Zpět"
        android:textColorHint="@color/white"
        android:textSize="18sp"></Button>

    <TextView
        android:layout_width="410sp"
        android:layout_height="70sp"
        android:gravity="center"
        android:hint="Přidání události"
        android:textColorHint="@color/purple"
        android:textSize="30sp"></TextView>

    <LinearLayout
        android:layout_width="410sp"
        android:layout_height="50sp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="140sp"
            android:layout_height="60sp"
            android:hint="Název: "
            android:textSize="25sp"
            android:textColorHint="@color/purple"></TextView>

        <EditText
            android:id="@+id/etUdalost"
            android:layout_width="270sp"
            android:layout_height="60sp"
            android:hint="událost"
            android:textSize="25sp"></EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="410sp"
        android:layout_height="60sp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="140sp"
            android:layout_height="60sp"
            android:hint="Datum: "
            android:textSize="25sp"
            android:textColorHint="@color/purple"></TextView>

        <EditText
            android:id="@+id/etDatum"
            android:layout_width="270sp"
            android:layout_height="60sp"
            android:focusable="false"
            android:hint="vybrat datum"
            android:textSize="25sp"></EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="410sp"
        android:layout_height="60sp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="140sp"
            android:layout_height="60sp"
            android:hint="Kategorie: "
            android:textSize="25sp"
            android:textColorHint="@color/purple"></TextView>

        <AutoCompleteTextView
            android:id="@+id/etCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="vyberte kategorii"
            android:inputType="none"
            android:dropDownHeight="wrap_content"
            android:dropDownWidth="match_parent"
            android:textSize="25sp"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="120sp"
        android:layout_height="60sp"
        android:hint="Přidat"
        android:textColorHint="@color/white"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:layout_margin="40sp"></Button>

</LinearLayout>